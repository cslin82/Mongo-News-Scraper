 
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">
              {{!-- <span class="badge badge-success">New</span> --}}
              <a href="{{url}}">{{title}}</a>
              <span class="float-right">
                {{#unless saved}}<a href="#" class="badge badge-primary action-save" data-article-id="{{_id}}">Save</a>{{/unless}}
                {{#if saved}}<a href="#" class="badge badge-danger action-unsave" data-article-id="{{_id}}">Unsave</a>{{/if}}
              </span>
            </h5>
            <h6 class="card-subtitle text-muted mb-2">by {{author}}</h6>
            
            <p class="card-text">{{summary}}</p>
        
          </div>
          
          {{#if saved}}
          <ul class="list-group list-group-flush">
            {{#each notes}}
            <li class="list-group-item"><a href="#" class="badge badge-danger action-unsave mr-2" data-note-id="{{this._id}}">Delete note</a>{{noteText}} {{this.noteText}}</li>
          </ul>
            {{/each}}

          
            {{#if notes}}
            {{/if}}
          {{/if}}

          <div class="card-footer">
             Posted on
             {{!-- replace this with handlebars helpers --}}
            <time datetime="{{publishDate}}" title="{{publishDateFull}}">
              <span class="date">{{publishDateDate}}</span>
            </time>
          </div>
        </div>
 